<%- include('partials/header') -%>
  <meta 
  name="description" 
  content="Github Profiles Stalker allow to search and view Github Users by their Username." />
  <title>Github Profiles Stalker</title>

<body>

  <div class="text-center mt-5">
    <i class="fab fa-github fa-4x mt-5"></i>
    <h2 class="m-4 sm-small">Github Profiles Stalker</h2>
  </div>

  <div class="container mt-5">
    <form action="/" method="POST" class="input-group mb-5">
      <input
        class="form-control py-4 amber-border"
        type="text"
        placeholder="Search by Username..."
        name="userId"
      />
      <div class="input-group-append">
        <button type="submit" class="input-group-text amber lighten-3">
          <i class="fas fa-search text-grey" aria-hidden="true"></i>
        </button>
      </div>
    </form>
  </div>

    <div class="container card text-center mb-3" style="max-width: 540px;">
      <div class="row g-0">
        <div class="col-md-4">
          <img src="<%= users[0].avatar_url %>"  class="userImage m-3 bg-primary p-2" alt="...">
        </div>
        <div class="col-md-8">
          <div class="card-body">
            <p class="userId"><a href="/@<%= users[0].login %>"><%= users[0].login %></a></p>
            <p><i class="fas fa-building mr-2"></i> <%= users[0].type %></p>
          </div>
        </div>
      </div>
    </div>

<%- include('partials/footer') -%>
