<%- include('partials/header') -%>

<div class="container">
  <div class="text-center mt-5">
    <img
      class="userImage mb-3 bg-success p-2"
      src="<%= userData.avatar_url %>"
      alt=""
    />
    <h1 class="userName"><%= userData.name %></h1>
    <p class="userId"><a target="_blank" href="<%= userData.html_url %>">@<%= userData.login %></a></p>

    <h5 class="mb-4"><%= userData.bio %> </h5>

        <div class="container">
        <div class="row no-gutters row-cols-auto">
          <div class="col">
            <p><i class="fas fa-building mr-2"></i> <%= userData.company %></p>
        </div>
          <div class="col">
            <p><i class="fas fa-map-marker-alt mr-2"></i><%= userData.location %></p>
        </div>
          <div class="col">
            <p><i class="far fa-calendar-alt mr-2"></i>Joined <%= userData.created_at %></p>
        </div>
          </div>
        </div>


        <div class="row row-cols-1 row-cols-md-3 mt-4">
            
            <div class="col">
              <div class="card">
                <div class="card-body">
                  <h5 class="card-title"><%= userData.public_repos %></h5>
                  <p class="card-text">Public Repositories</p>
                </div>
              </div>
            </div>

            <div class="col">
              <div class="card">
                <div class="card-body">
                  <h5 class="card-title"><%= userData.followers %></h5>
                  <p class="card-text">Followers</p>
                </div>
              </div>
            </div>

            <div class="col">
              <div class="card">
                <div class="card-body">
                  <h5 class="card-title"><%= userData.following %></h5>
                  <p class="card-text">Following</p>
                </div>
              </div>
            </div>

          </div>

      
    </div>
  </div>
</div>

<%- include('partials/footer') -%>
